<form class="{{cssClass}}" autocomplete="off">
  <header class="sheet-header">
    <img class="profile-img" src="{{item.img}}" data-edit="img" title="{{item.name}}"/>
    <div class="header-fields">
      <h1 class="charname"><input name="name" type="text" value="{{item.name}}" placeholder={{localize "SWORDS_WIZARDRY.Item.Feature.Name"}}/></h1>
    </div>
  </header>

  {{!-- Sheet Tab Navigation --}}
  <!--
  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" data-tab="description">{{localize "SWORDS_WIZARDRY.Item.Feature.Tabs.Description"}}</a>
    <a class="item" data-tab="attributes">{{localize "SWORDS_WIZARDRY.Item.Feature.Tabs.Attributes"}}</a>
  </nav>
  -->

  {{!-- Sheet Body --}}
  <section class="sheet-body">
    <div class="tab" data-group="primary">
      <div class="grid grid-3col">
        <div class="resource">
          <label class="resource-label">{{localize "SWORDS_WIZARDRY.Item.Item.Attributes.RollFormula"}}</label>
          <input type="text" name="system.formula" value="{{system.formula}}" data-dtype="String"/>
        </div>
        <div class="resource">
          <label class="resource-label">{{localize "SWORDS_WIZARDRY.Item.Item.Attributes.Target"}}</label>
          <input type="text" name="system.target" value="{{system.target}}" data-dtype="String"/>
        </div>
        <div class="resource">
          <label class="resource-label">{{localize "SWORDS_WIZARDRY.Item.Item.Attributes.TargetType"}}</label>
          <select name="system.targetType" value="{{system.targetType}}" data-dtype="String">
            <option value="ascending" {{# if (eq system.targetType 'ascending')}}selected{{/if}}>{{localize "SWORDS_WIZARDRY.Item.Item.Attributes.TargetTypeAsc"}}</option>
            <option value="descending" {{# if (eq system.targetType 'descending')}}selected{{/if}}>{{localize "SWORDS_WIZARDRY.Item.Item.Attributes.TargetTypeDes"}}</option>
          </select>
        </div>
      </div>
      <div class="grid grid-1col">
        {{editor system.description target="system.description" rollData=rollData button=true engine="prosemirror" owner=owner editable=editable}}
      </div>
    </div>
  </section>
</form>
