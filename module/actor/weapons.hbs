        data-type='armor'
      >
        <i class='fas fa-plus'></i>
      </a>
    </div>
  </li>
  {{#each armor as |item id|}}
    <li class='item grid grid-5col' data-item-id='{{item._id}}'>
      <div class='item-name grid-span-2'>
        <div class='item-image'>
          <a class='rollable' data-roll-type='item'>
            <img
              src='{{item.img}}'
              title='{{item.name}}'
              width='24'
              height='24'
