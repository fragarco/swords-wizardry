<form class="{{cssClass}}" autocomplete="off">
  <header class="sheet-header">
    <img class="profile-img" src="{{item.img}}" data-edit="img" title="{{item.name}}"/>
    <div class="header-fields">
      <h1 class="charname"><input name="name" type="text" value="{{item.name}}" placeholder={{localize "SWORDS_WIZARDRY.Item.Feature.Name"}}/></h1>
    </div>
  </header>

  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" data-tab="description">{{localize "SWORDS_WIZARDRY.Item.Feature.Tabs.Description"}}</a>
    <a class="item" data-tab="attributes">{{localize "SWORDS_WIZARDRY.Item.Feature.Tabs.Attributes"}}</a>
    <a class="item" data-tab="effects">{{localize "SWORDS_WIZARDRY.Item.Feature.Tabs.Effects"}}</a>
  </nav>

  {{!-- Sheet Body --}}
  <section class="sheet-body">

    {{!-- Description Tab --}}
    <div class="tab" data-group="primary" data-tab="description">
      {{editor system.description target="system.description" rollData=rollData button=true owner=owner editable=editable}}
    </div>

    {{!-- Attributes Tab --}}
    <div class="tab attributes" data-group="primary" data-tab="attributes">
      {{!-- As you add new fields, add them in here! --}}
      <div class="resource">
        <label class="resource-label">{{localize "SWORDS_WIZARDRY.Item.Item.Attributes.RollFormula"}}</label>
        <input type="text" name="system.formula" value="{{system.formula}}" data-dtype="String"/>
      </div>
      <div class="resource">
        <label class="resource-label">Target</label>
        <input type="text" name="system.target" value="{{system.target}}" data-dtype="String"/>
      </div>
      <div class="resource">
        <label class="resource-label">Target Type</label>
        <select name="system.targetType" value="{{system.targetType}}" data-dtype="String">
          <option value="ascending" {{# if (eq system.targetType 'ascending')}}selected{{/if}}>Ascending</option>
          <option value="descending" {{# if (eq system.targetType 'descending')}}selected{{/if}}>Descending</option>
        </selected>
      </div>
    </div>

    {{!-- Effects Tab --}}
    <div class="tab effects" data-group="primary" data-tab="effects">
      {{> "systems/swords-wizardry/templates/item/parts/item-effects.hbs"}}
    </div>
  </section>

</form>
