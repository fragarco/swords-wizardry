<!-- TO HIT table -->
{{# if useAscendingAC }}
<div class="grid grid-1col">
  <div class="resource">
    <label for="system.tHAACB" class="resource-label">Attack Bonus</label>
    <input type="text" class="nomargin" name="system.tHAACB"  value="{{system.tHAACB}}" data-label="tHAACB" data-dtype="Number" />
  </div>
</div>
{{else}}
<h3 class="resource-label align-center">{{localize 'SWORDS_WIZARDRY.CharacterSheet.Combat.RollNeededToHitAC'}}</h3>

<div class="grid grid-19col align-center">
  {{#each system.toHitACMatrix as |val key|}}
  <div>
    <label for="system.toHitACMatrix.{{val}}.value" class="nomargin align-center" data-label="{{key}}"> {{key}}</label>
  </div>
  {{/each}}
  {{#each system.toHitACMatrix as |val key|}}
  {{# if (eq key "+0")}}
  <div>
    <input class="nomargin align-center" type="text" name="system.tHAC0" value="{{val}}" data-dtype="Number"/>
  </div>
  {{else}}
  <div>
    <input class="nomargin align-center" type="text" disabled name="system.toHitACMatrix.{{key}}" value="{{val}}" data-dtype="Number"/>
  </div>
  {{/ if }}
  {{/each}}
</div>
<br>
{{/ if }}
<h3>{{localize 'SWORDS_WIZARDRY.CharacterSheet.Combat.Table.Title'}}</h3>
<ol class='items-list'>
  <li class='item items-header grid grid-6col'>
    <div class='item-name grid-span-2'>{{localize 'SWORDS_WIZARDRY.CharacterSheet.Combat.Table.Name'}}</div>
    <div class='item-prop'>{{localize 'SWORDS_WIZARDRY.CharacterSheet.Combat.Table.Weight'}}</div>
    <div class='item-modifier'>{{localize 'SWORDS_WIZARDRY.CharacterSheet.Combat.Table.ToHitModifier'}}</div>
    <div class='item-damage'>{{localize 'SWORDS_WIZARDRY.CharacterSheet.Combat.Table.DamageRollFormula'}}</div>
    <div class='item-controls'>
      <a
        class='item-control item-create'
        title='{{localize "SWORDS_WIZARDRY.CharacterSheet.Combat.Table.Create" type='weapon'}}'
        data-type='weapon'
      >
        <i class='fas fa-plus'></i>
      </a>
    </div>
  </li>
  {{#each weapons as |item id|}}
  <li class='item grid grid-6col' data-item-id='{{item._id}}'>
    <div class='item-name grid-span-2'>
      <div class='item-image'>
        <a class='rollable' data-roll-type='item'>
          <img
            src='{{item.img}}'
            title='{{item.name}}'
            width='24'
            height='24'
          />
        </a>
      </div>
      <h4>{{item.name}}</h4>
    </div>
    <div class='item-prop'>{{item.system.weight}}</div>

    <div class='item-modifier item-prop'>{{item.system.modifier}}</div>
    <div class='item-damage item-prop'>{{item.system.damageFormula}}</div>
    <div class='item-controls'>
      <a
        class='item-control item-edit'
        title='{{localize "SWORDS_WIZARDRY.CharacterSheet.Combat.Table.Update" type='weapon'}}'
      >
        <i class='fas fa-edit'></i>
      </a>
      <a
        class='item-control item-delete'
        title='{{localize "SWORDS_WIZARDRY.CharacterSheet.Combat.Table.Delete" type='weapon'}}'
      >
        <i class='fas fa-trash'></i>
      </a>
    </div>
  </li>
  {{/each}}
</ol>
<h3></h3>
<h3>{{localize 'SWORDS_WIZARDRY.CharacterSheet.Combat.ArmorTable.Title'}}</h3>
