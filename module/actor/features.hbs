<span class="resource-label"><h3>{{localize 'SWORDS_WIZARDRY.CharacterSheet.Features.Table.Title'}}</h3></span>
<ol class='items-list'>
  <li class='item items-header grid grid-4col'>
   <div class='item-name grid-span-3'>{{localize 'SWORDS_WIZARDRY.CharacterSheet.Features.Table.Name'}}</div>
    <div class='item-controls'>
      <a
        class='item-control item-create'
        title={{localize 'SWORDS_WIZARDRY.CharacterSheet.Features.Table.Create' type='feature'}}
        data-type='feature'
      >
        <i class='fas fa-plus'></i>
      </a>
    </div>
  </li>
  {{#each features as |item id|}}
  <li class='item grid grid-4col' data-item-id='{{item._id}}'>
    <div class='item-name grid-span-3'>
      <div class='item-image'>
        <a class='rollable' data-roll-type='item'>
          <img
            src='{{item.img}}'
            title='{{item.name}}'
            width='24'
            height='24'
          />
        </a>
      </div>
      <h4>{{item.name}}</h4>
    </div>
    <div class='item-controls'>
      <a
        class='item-control item-edit'
        title='{{localize "SWORDS_WIZARDRY.CharacterSheet.Features.Table.Update" type='feature'}}'
      >
        <i class='fas fa-edit'></i>
      </a>
      <a
        class='item-control item-delete'
        title='{{localize "SWORDS_WIZARDRY.CharacterSheet.Features.Table.Delete" type='feature'}}'
      >
        <i class='fas fa-trash'></i>
      </a>
    </div>
  </li>
  {{/each}}
</ol>
