<form class="{{cssClass}} {{actor.type}} flexcol" autocomplete="off">
  <header class="sheet-header">
    <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="100" width="100"/>
    <div class="header-fields">
      <h1 class="charname"><input name="name" type="text" value="{{actor.name}}" placeholder={{localize 'SWORDS_WIZARDRY.NPCSheet.Main.Name'}}></h1>
    </div>
  </header>

  <section class="sheet-body">
    <div class="flexrow flex-group-center">
      <label class="modifier-label  align-left" >{{ localize 'SWORDS_WIZARDRY.CharacterSheet.Equipment.Gold' }}</label>
      <input class="modifier-value  align-left" type="text" name="system.treasure.gp" value="{{system.treasure.gp}}" data-dtype="Number"/>
    </div>
    <div class="flexrow flex-group-center">
      <label class="modifier-label  align-left" >{{ localize 'SWORDS_WIZARDRY.CharacterSheet.Equipment.Gems' }}</label>
      <input class="modifier-value  align-left" type="text" name="system.treasure.gems" value="{{system.treasure.gems}}"/>
    </div>
    <div class="flexrow flex-group-center">
      <label class="modifier-label  align-left" >{{ localize 'SWORDS_WIZARDRY.CharacterSheet.Equipment.Other' }}</label>
      <input class="modifier-value  align-left" type="text" name="system.treasure.misc" value="{{system.treasure.misc}}"/>
    </div>
    <ol class='items-list'>
      <li class='item flexrow items-header'>
        <div class='item-name'>{{localize 'SWORDS_WIZARDRY.CharacterSheet.Equipment.Table.Name'}}</div>
        <!-- <div class='item-formula'>{{localize 'Roll Formula'}}</div> -->
        <div class='item-prop'>{{localize 'SWORDS_WIZARDRY.CharacterSheet.Equipment.Table.Quantity'}}</div>
        <div class='item-prop'>{{localize 'SWORDS_WIZARDRY.CharacterSheet.Equipment.Table.Weight'}}</div>
        <div class='item-controls'>
          <a
            class='item-control item-create'
            title='{{localize "SWORDS_WIZARDRY.CharacterSheet.Equipment.Table.Create" type='Item'}}'
            data-type='item'
          >
            <i class='fas fa-plus'></i>
            {{localize 'SWORDS_WIZARDRY.CharacterSheet.Equipment.Table.New' type='item'}}
          </a>
        </div>
      </li>
      {{#each items as |item id|}}
        <li class='item flexrow' data-item-id='{{item._id}}'>
          <div class='item-name'>
            <div class='item-image'>
              <a class='rollable' data-roll-type='item'>
                <img
                  src='{{item.img}}'
                  title='{{item.name}}'
                  width='24'
                  height='24'
                />
              </a>
            </div>
            <h4>{{item.name}}</h4>
          </div>
          <div></div>
          <div class="flexrow">
            <div class='item-props'>
              <a class='item-control item-dec'>
                <i class="fas fa-minus"></i>
              </a>
              {{item.system.quantity}}
              <a class='item-control item-inc'>
                <i class="fas fa-plus"></i>
              </a>
            </div>
          </div>
          <div class='item-prop'>{{item.system.weight}}</div>
          <div class='item-controls'>
            <a
              class='item-control item-edit'
              title='{{localize "SWORDS_WIZARDRY.CharacterSheet.Equipment.Table.Update" type='Item'}}'
            >
              <i class='fas fa-edit'></i>
            </a>
            <a
              class='item-control item-delete'
              title='{{localize "SWORDS_WIZARDRY.CharacterSheet.Equipment.Table.Delete" type='Item'}}'
            >
              <i class='fas fa-trash'></i>
            </a>
          </div>
        </li>
      {{/each}}
    </ol>
    </div>
  </section>
</form>
