<form class="{{cssClass}}" autocomplete="off">
  <header class="sheet-header">
    <img class="profile-img" src="{{item.img}}" data-edit="img" title="{{item.name}}"/>
    <div class="header-fields">
      <h1 class="charname"><input name="name" type="text" value="{{item.name}}" placeholder={{localize "SWORDS_WIZARDRY.Item.Armor.Name"}}/></h1>
      <div class="grid grid-3col">
        <div class="resource">
          <label class="resource-label">{{localize "SWORDS_WIZARDRY.Item.Armor.Quantity"}}</label>
          <input type="text" name="system.quantity" value="{{system.quantity}}" data-dtype="Number"/>
        </div>
        <div class="resource">
          <label class="resource-label">{{localize "SWORDS_WIZARDRY.Item.Armor.Weight"}}</label>
          <input type="text" name="system.weight" value="{{system.weight}}" data-dtype="Number"/>
        </div>
        <div class="resource">
          <label class="resource-label">{{localize "SWORDS_WIZARDRY.Item.Armor.Gold"}}</label>
          <input type="text" name="system.gp" value="{{system.gp}}" data-dtype="Number"/>
        </div>
      </div>
    </div>
  </header>
  <section class="sheet-body">
    <div class="tab" data-group="primary">
      <div class="grid grid-1col">
        <div class="resource">
          <label class="resource-label">{{localize "SWORDS_WIZARDRY.Item.Armor.Attributes.EffectOnAC"}}</label>
          <input type="text" name="system.effectOnAC" value="{{system.effectOnAC}}" data-dtype="String"/>
        </div>
      </div>
      <div class="grid grid-1col">
        {{editor system.description target="system.description" rollData=rollData button=true owner=owner editable=editable}}
      </div>
    </div>
  </section>
</form>
