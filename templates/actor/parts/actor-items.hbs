<ol class='items-list'>
  <li class="item items-header grid grid-6col">
    <div class='item-name grid-span-3'>{{localize 'SWORDS_WIZARDRY.CharacterSheet.Equipment.Table.Name'}}</div> 
    <div class='item-prop'>{{localize 'SWORDS_WIZARDRY.CharacterSheet.Equipment.Table.Quantity'}}</div>
    <div class='item-prop'>{{localize 'SWORDS_WIZARDRY.CharacterSheet.Equipment.Table.Weight'}}</div>
    <div class='item-controls'>
      <a
          class='item-control item-create'
          title='{{localize "SWORDS_WIZARDRY.CharacterSheet.Equipment.Table.Create" type='Item'}}'
          data-type='item'
      >
        <i class='fas fa-plus'></i>
      </a>
    </div>
  </li>
  {{#each gear as |item id|}}
  <li class="item grid grid-6col" data-item-id="{{item._id}}">
    <div class='item-name grid-span-3'>
      <div class='item-image'>
        <a class='rollable' data-roll-type='item'>
          <img
              src='{{item.img}}'
              title='{{item.name}}'
              width='24'
              height='24'
          />
        </a>
      </div>
      <h4>{{item.name}}</h4>
    </div>
    <div class='item-prop'>
      <a class='item-control item-dec'>
        <i class="fas fa-minus"></i>
      </a>
      {{item.system.quantity}}
      <a class='item-control item-inc'>
        <i class="fas fa-plus"></i>
      </a>
    </div>
    <div class='item-prop'>{{item.system.weight}}</div>
    <div class='item-controls'>
      <a
          class='item-control item-edit'
          title='{{localize "SWORDS_WIZARDRY.CharacterSheet.Equipment.Table.Update" type='Item'}}'
      >
        <i class='fas fa-edit'></i>
      </a>
      <a
          class='item-control item-delete'
          title='{{localize "SWORDS_WIZARDRY.CharacterSheet.Equipment.Table.Delete" type='Item'}}'
      >
        <i class='fas fa-trash'></i>
      </a>
    </div>
  </li>
  {{/each}}
</ol>
