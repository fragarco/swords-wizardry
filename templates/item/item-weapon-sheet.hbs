<form class="{{cssClass}}" autocomplete="off">
  <header class="sheet-header">
    <img class="profile-img" src="{{item.img}}" data-edit="img" title="{{item.name}}"/>
    <div class="header-fields">
      <h1 class="charname"><input name="name" type="text" value="{{item.name}}" placeholder={{localize "SWORDS_WIZARDRY.Item.Weapon.Name"}}/></h1>
      <div class="grid grid-3col">
        <div class="resource">
          <label class="resource-label">{{localize "SWORDS_WIZARDRY.Item.Weapon.Quantity"}}</label>
          <input type="text" name="system.quantity" value="{{system.quantity}}" data-dtype="Number"/>
        </div>
        <div class="resource">
          <label class="resource-label">{{localize "SWORDS_WIZARDRY.Item.Weapon.Weight"}}</label>
          <input type="text" name="system.weight" value="{{system.weight}}" data-dtype="Number"/>
        </div>
        <div class="resource">
          <label class="resource-label">{{localize "SWORDS_WIZARDRY.Item.Weapon.Gold"}}</label>
          <input type="text" name="system.gp" value="{{system.gp}}" data-dtype="Number"/>
        </div>
      </div>
    </div>
  </header>
  <section class="sheet-body">
    <div class="tab" data-group="primary">
      <div class="grid grid-3col">
        <div class="resource">
          <label class="resource-label">{{localize "SWORDS_WIZARDRY.Item.Weapon.Attributes.ToHitModifier"}}</label>
          <input type="text" name="system.modifier" value="{{system.modifier}}" data-dtype="String"/>
        </div>
        <div class="resource">
          <label class="resource-label">{{localize "SWORDS_WIZARDRY.Item.Weapon.Attributes.DamageRollFormula"}}</label>
          <input type="text" name="system.damageFormula" value="{{system.damageFormula}}" data-dtype="String"/>
        </div>
        <div class="resource">
          <label class="resource-label">{{localize "SWORDS_WIZARDRY.Item.Weapon.Attributes.SpecialDamage"}}</label>
          <input type="text" name="system.specialDamage" value="{{system.specialDamage}}" data-dtype="String"/>
        </div>
        <div class="resource">
          <label class="resource-label">{{localize "SWORDS_WIZARDRY.Item.Weapon.Attributes.Missile"}}</label>
          <input type="checkbox" name="system.missile" class="checkbox-small align-self-center" {{checked system.missile}}/>
        </div>
        <div class="resource">
          <label class="resource-label">{{localize "SWORDS_WIZARDRY.Item.Weapon.Attributes.Range"}}</label>
          <input type="text" name="system.range" value="{{system.range}}" data-dtype="Number"/>
        </div>
        <div class="resource">
          <label class="resource-label">{{localize "SWORDS_WIZARDRY.Item.Weapon.Attributes.RateOfFire"}}</label>
          <input type="text" name="system.rateOfFire" value="{{system.rateOfFire}}" data-dtype="Number"/>
        </div>
      </div>
      <div class="grid grid-1col">
        {{editor system.description target="system.description" rollData=rollData button=true engine="prosemirror" owner=owner editable=editable}}
      </div>
    </div>
  </section>
</form>
