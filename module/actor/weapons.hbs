      <div class='item-prop'>{{item.system.weight}}</div>

      <div class='item-formula item-prop'>{{item.system.effectOnAC}}</div>
      <div class='item-controls'>
        <a
          class='item-control item-edit'
          title='{{localize "SWORDS_WIZARDRY.CharacterSheet.Combat.ArmorTable.Update" type='armor'}}'
